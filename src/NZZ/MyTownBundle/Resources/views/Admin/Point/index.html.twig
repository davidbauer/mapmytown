{% extends "NZZMyTownBundle::layout.html.twig" %}
 {% block body %}
     <div class="container">
            <h1>Welcome to MyTowm Project</h1>
             <table class="table table-bordered">
                 <tr>
                    {% for field in fields %}
                        <td> {{ field }}</td>
                    {% endfor %}
                        <td> </td>
                 </tr>
                 {% for point in points %}
                     <tr id="points">
                         <td> {{ point.id }}</td>
                         <td> {{ point.description|default('') }}</td>
                         <td>{{ point.latitude|default('') }}</td>
                         <td>{{ point.longitude|default('') }}</td>
                         <td>{{ point.submitterName|default('') }}</td>
                         <td>{{ point.submitterLocation|default('') }}</td>
                        {% if point.is_published|default(false) %}
                            <td> <a class="btn btn-warning" href="{{ path('nzz_my_town_admin_points_unpublish', {'pointId': point.id }) }}">Unpublish</a></td>
                        {% else %}
                            <td> <a class="btn btn-success" href="{{ path('nzz_my_town_admin_points_publish', {'pointId': point.id }) }}">Publish</a></td>
                        {% endif %}
                         <td> <a class="btn btn-danger" href="{{ path('nzz_my_town_admin_points_remove', {'pointId': point.id }) }}"><i>x</i></a></td>
                     </tr>
                     {% endfor %}
             </table>
         <div class="pagination">
             <ul>
                 <li><a href="#">Prev</a></li>
                 <li><a href="#">1</a></li>
                 <li><a href="#">2</a></li>
                 <li><a href="#">3</a></li>
                 <li><a href="#">4</a></li>
                 <li><a href="#">5</a></li>
                 <li><a href="#">Next</a></li>
             </ul>
         </div>
    </div>
 {% endblock %}

{% block javascripts %}
    <script src='http://api.tiles.mapbox.com/mapbox.js/v1.3.1/mapbox.js'></script>
    {#'bundles/vfemytown/js/app.js'#}
    {% javascripts filter='?yui_js' output='js/*.js'
    'bundles/nzzmytown/js/jquery.simplePagination.js'
    %}
    <script src="{{ asset_url }}"></script>
    <script type="text/javascript">
        $(function() {
            $('.pagination').pagination({
                items: {{ count }},
                itemsOnPage: {{ limit }},
                onPageClick: function(pageNumber, event) {
                    window.location ="{{ path('nzz_my_town_admin_points_dashboard', {'projectId': projectId }) }}?offset=" + (pageNumber-1)*{{ limit }};
                }
            });
        });
    </script>

    {% endjavascripts %}
{% endblock %}
